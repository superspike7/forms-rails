<%
=begin%>
 
 <form action="/users" method="post" accept-charset="UTF-8" > 
  <label for="username">Username:</label> 
  <input type="string" id="username" name="user[username]"><br><br> 
  <label for="email">Email:</label> 
  <input type="email" id="email" name="user[email]"><br><br> 
  <label for="password">Password:</label> 
  <input type="password" id="password" name="user[password]"><br><br> 
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"> 
  <input type="submit" value="Submit"> 
</form>   
<%
=end%>

<%
=begin%>
 <%= form_tag("/users", method: "post") do %>
  <%= label_tag('username', 'Username:') %>
  <%= text_field_tag('user[username]') %>
  <%= label_tag('email', 'Email:') %>
  <%= email_field_tag('user[email]') %>
  <%= label_tag('password', 'Password:') %>
  <%= password_field_tag('user[password]') %>
  <%= submit_tag("Submit") %>
<% end %> 
<%
=end%>


<%= form_with model: User.new do |form| %>
  Username: <%= form.text_field :username, :value => 'your username here'  %> <br>
  Email: <%= form.email_field :email, :value => 'example@example.com' %> <br>
  Password: <%= form.password_field :password %> <br>
  <%= form.submit%>
<% end %>
