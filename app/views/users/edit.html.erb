<%
=begin%>
 
 <form action="/users" method="post" accept-charset="UTF-8" > 
  <label for="username">Username:</label> 
  <input type="string" id="username" name="user[username]"><br><br> 
  <label for="email">Email:</label> 
  <input type="email" id="email" name="user[email]"><br><br> 
  <label for="password">Password:</label> 
  <input type="password" id="password" name="user[password]"><br><br> 
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"> 
  <input type="submit" value="Submit"> 
</form>   
<%
=end%>

<%
=begin%>
 <%= form_tag("/users", method: "post") do %>
  <%= label_tag('username', 'Username:') %>
  <%= text_field_tag('user[username]') %>
  <%= label_tag('email', 'Email:') %>
  <%= email_field_tag('user[email]') %>
  <%= label_tag('password', 'Password:') %>
  <%= password_field_tag('user[password]') %>
  <%= submit_tag("Submit") %>
<% end %> 
<%
=end%>

<h1>Edit User</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this article from being saved:</h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user do |form| %>
  Username: <%= form.text_field :username %> <br>
  Email: <%= form.email_field :email %> <br>
  Password: <%= form.password_field :password %> <br>
  <%= form.submit%>
<% end %>


